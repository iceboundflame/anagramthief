<% user = @player_profiles[player_info['id']] %>
<h3 class="clearfix">
  <%= image_tag user.profile_pic, width: 40, height: 40, class: 'left' %>
  <%= user.name %>
</h3>
<ul>
  <% player_info['words'].each do |word| %>
    <li><%= render :partial => 'tiles', :object => word.chars.to_a %></li>
  <% end %>
  <% if player_info['words'].size == 0 %>
    <li>No words :(</li>
  <% end %>
</ul>
