<div id="player-info-<%= player.id %>"
  class="player-info <%= 'in' unless player.is_active %>active-player">
<div class="clearfix">
  <%= image_tag player.user.profile_pic, width: 40, height: 40, class: 'score-pfpic' %>
  <span class="username"><%= player.user.name %></span>
  <% unless player.is_active %>(Inactive)<% end %>
  &mdash;
  <span class="score"><%= player.num_letters %> letters</span>
  <% if player.voted_done %>
    &mdash; <span class="voted-done">Voted to end the game</span>
  <% end %>
<ul class="player-words">
  <% player.words.each do |id,word| %>
    <li id="<%= "word-#{player.id}-#{id}" %>"><%= render :partial => 'tiles', :object => word.letters %></li>
  <% end %>
  <% if player.words.size == 0 %>
    <li>No words.</li>
  <% end %>
</ul>
</div>
</div>
