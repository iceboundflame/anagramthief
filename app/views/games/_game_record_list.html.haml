%ul.game-record-list
  - game_record_list.each do |r|
    %li
      = time_ago_in_words r.created_at
      ago in
      %span.game-name= r.gameroom ? r.gameroom.name : '(somewhere)'
      %ul
        - r.user_game_records.each do |u_r|
          %li
            = ordinalize u_r.rank
            \:
            = succeed "," do
              %span.game-player= u_r.user.name
            = u_r.num_letters
            letters
